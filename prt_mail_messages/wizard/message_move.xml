<odoo>
    <!--#######################
        # Message Move Wizard #
        #######################-->
    <!-- ## Form view ## -->
    <record model="ir.ui.view" id="prt_message_move_form">
        <field name="name">prt.message.move.form</field>
        <field name="model">prt.message.move.wiz</field>
        <field name="arch" type="xml">
            <form create='false' edit='false' string="Move messages">
                <div
                    name="pro"
                    role="alert"
                    colspan="2"
                    class="alert alert-warning alert-dismissible fade show text-center"
                >
                    Please purchase
                    <a
                        target="_blank"
                        href="https://apps.odoo.com/apps/modules/16.0/prt_mail_messages_pro"
                    >
                        <strong>Pro Version</strong>
                    </a>
                    to use this feature
                </div>
                <group>
                    <label for="model_to" />
                    <div class="o_row d-flex">
                        <field name="model_to" context="{'message_move_wiz':1}" />
                        <button
                            name="%(prt_mail_messages.cx_model_reference_action)d"
                            class="oe_link"
                            icon="fa-arrow-right"
                            type="action"
                            string="Configure referable"
                            groups="base.group_system"
                        />
                    </div>
                    <field name="notify" />
                    <field name="is_conversation" invisible="1" />
                    <field name="is_lead" invisible="1" />
                    <field
                        name="lead_delete"
                        invisible="is_lead == False"
                    />
                    <field
                        name="opp_delete"
                        invisible="is_lead == False or lead_delete == False"
                    />
                </group>
                <footer>
                    <button
                        name="message_move"
                        string="Move"
                        special="cancel"
                        class="oe_link"
                        invisible="1"
                    />
                    <button
                        name="cancel"
                        string="Cancel"
                        special="cancel"
                        class="oe_link"
                    />
                </footer>
            </form>
        </field>
    </record>
</odoo>
