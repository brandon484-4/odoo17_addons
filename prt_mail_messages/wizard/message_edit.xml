<odoo>
    <!--#################
   # Edit Message #
   ######################-->
    <!-- ## Form view ## -->
    <record model="ir.ui.view" id="cx_message_edit_wiz_form">
        <field name="name">cx.message.edit.wiz.form</field>
        <field name="model">cx.message.edit.wiz</field>
        <field name="arch" type="xml">
            <form string="Edit">
                <div
                    name="can_edit"
                    colspan="2"
                    class="oe_form_box_info oe_text_center"
                    invisible="can_edit == True"
                >
                    <div
                        class="alert alert-warning alert-dismissible fade show text-center"
                        role="alert"
                    >
                        Not enough access rights to edit this message
                    </div>
                </div>
                <field name="message_id" invisible="1" />
                <field name="can_edit" invisible="1" />
                <field
                    name="body"
                    nolabel="1"
                    invisible="can_edit == False"
                />
                <footer>
                    <button
                        string="Save"
                        name="save"
                        type="object"
                        class="btn-primary"
                        invisible="can_edit == False"
                    />
                    <button
                        string="Cancel"
                        name="cancel"
                        special="cancel"
                        class="btn-secondary"
                    />
                </footer>
            </form>
        </field>
    </record>
</odoo>
